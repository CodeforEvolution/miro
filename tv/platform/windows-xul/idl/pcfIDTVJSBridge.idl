#include "nsISupports.idl"
#include "nsIDOMDocument.idl"
#include "nsIDOMElement.idl"
#include "nsIWebProgressListener.idl"
#include "nsIURIContentListener.idl"
#include "nsIDOMWindow.idl"

[scriptable, uuid(7E70142F-ABC9-4d6e-BDB8-EDC747FCD2A3)]
interface pcfIDTVJSBridge : nsISupports
{
  readonly attribute nsIDOMDocument mainWindowDocument;

  /**
   * Load the given 'URI' in the XUL object given by 'elt' (such as
   * might be returned by getElementById.)
   */
  void xulLoadURI(in nsISupports elt, in AString uri);

  void xulAddProgressListener(in nsISupports elt,
			      in nsIWebProgressListener listener);
  void xulRemoveProgressListener(in nsISupports elt,
				 in nsIWebProgressListener listener);

  nsIURIContentListener xulGetContentListener(in nsISupports elt);
  void xulSetContentListener(in nsISupports xulElt,
			     in nsIURIContentListener listener);

  nsIDOMWindow xulGetContentWindow(in nsISupports elt);

  void xulRemoveAllChildren(in nsISupports elt);

  void xulAddElementAtEnd(in nsISupports elt, in AString xml, in AString id);
  void xulAddElementBefore(in nsISupports elt, in AString xml, in AString id);
  void xulRemoveElement(in nsISupports elt, in AString id);
  void xulChangeElement(in nsISupports elt, in AString id, in AString xml);
  void xulHideElement(in nsISupports elt, in AString id);
  void xulShowElement(in nsISupports elt, in AString id);
};
