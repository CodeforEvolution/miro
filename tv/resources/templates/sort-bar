def getActiveStateForSortBy(by):
    if sorts.sortBy == by:
        return 'active'
    return ''

def getImageForSortBy(by):
    if sorts.sortDirection == 'ascending':
        return 'resource:images/sort-up.png'
    return 'resource:images/sort-down.png'
]]>
</t:execOnLoad>
