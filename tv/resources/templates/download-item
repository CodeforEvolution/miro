this = kargs['this']
viewName = kargs['viewName']
	
if this.isDownloaded():
    contextMenu = "action:addToNewPlaylist|Add to new playlist\naction:removeCurrentItems|Remove"
elif this.isDownloadable():
    contextMenu = "action:downloadCurrentItems|Download"
else:
    contextMenu = "action:stopDownloadingCurrentItems|Cancel download"
]]></t:execOnLoad>
