  Remove a collection:<br/>
  <a t:repeatForView="collections" href="action:removeCollection?id=@@@this getID@@@">
    <span t:replace="this title" /><br />
   </a>
<br/><br/>
  Add to a collection:<br/>
  <form t:repeatForView="collections" action="action:addToCollection" method="GET">
    <span t:replace="this title" />
      <input name="id" type="hidden" value="@@@this getID@@@"/>
      <input name="item" type="text" />
      <input type="submit" />
      <br />
   </form>
<br/><br/>
  Remove from a collection:<br/>
  <form t:repeatForView="collections" action="action:removeFromCollection" method="GET">
    <span t:replace="this title" />
      <input name="id" type="hidden" value="@@@this getID@@@"/>
      <input name="item" type="text" />
      <input type="submit" />
      <br />
   </form>
<br/><br/>
  Move within a collection:<br/>
  <form t:repeatForView="collections" action="action:moveInCollection" method="GET">
    <span t:replace="this title" />
      <input name="id" type="hidden" value="@@@this getID@@@"/>
      <input name="item" type="text" />
      <input name="pos" type="text" />
      <input type="submit" />
      <br />
   </form>
<br/><br/>
