mkdir temp-miro
cd temp-miro
if [ "x-$1" == "x-" ]; then
    svn co https://svn.participatoryculture.org/svn/dtv/trunk/tv
    tag=`date +%Y-%m-%d`
else
    svn co https://svn.participatoryculture.org/svn/dtv/tags/Democracy-Player-$1/tv
    tag=$1
fi
mv tv Miro-$tag
tar zcvf Miro-$tag.tar.gz --exclude=.svn Miro-$tag
mv Miro-$tag.tar.gz ..
cd ..
rm -Rf temp-miro

